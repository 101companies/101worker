{
	"title": "Fragment schema",
	"type" : "object",
    "required": ["wiki", "github", "name", "headline", "namespace", "sesame", "endpoint", "classifier", "geshi", "language", "content", "fragments"],
	"properties": {
		"wiki" : {
			"type": "string",
			"description": "link to the wiki page",
            "format": "uri"
		},
		"github" : {
			"type": "string",
			"description" : "link to the github page",
            "format": "uri"
		},
		"name" : {
			"type": "string",
			"description" : "name of the entity"
		},
		"headline" : {
			"type": "string",
			"description": "headline from the wiki"
		},
		"namespace" : {
			"type": "string",
			"description": "namespace this entity belongs to"
		},
		"sesame" : {
			"type": "string",
			"description": "link to the sesame triplestore",
            "format": "uri"
		},
		"endpoint" : {
			"type": "string",
			"description": "link to the semantic endpoint triples",
            "format": "uri"
		},
		"classifier" : {
			"type": "string",
			"description": "classifier of this entity"
        },
        "geshi" : {
            "type" : ["string", "null"],
            "description": "geshi code that can be used for highlighting"
        },
        "language": {
            "type" : "string",
            "description" : "language in which this file is written"
        },
        "content" : {
            "type" : "string",
            "description" : "content of the file"
        },
        "people" : {
            "type" : "array",
            "items": {
                "type" : "object",
                "required": ["role", "name"],
                "properties" : {
                    "role" : {
                        "type" : ["string", "null"],
                        "description" : "assumed role of the person"
                    },
                    "name" : {
                        "type" : "string",
                        "description" : "name of the person"
                    }
                }
            }
        },
		"fragments" : {
			"type": "array",
			"items": {
				"type": "object",
                "required": ["resource", "classifier", "name"],
				"properties": {
					"resource" : {
						"type": "string",
						"description": "link to the member resource",
                        "format": "uri"
					},
					"classifier" : {
						"type": "string",
						"description": "classifier of this member"
					},
					"name" : {
						"type": "string",
						"description": "name of this entity"
					}
				}
            }
		}
	}
}
