import re

def remove_headline_markup(text):

    replacements = [
        (r"(=+)([^=]+)\1", "\g<2>"),
        (r'\n', ''),
        (r'\[\[([^\]\]]+)\]\]', '\g<1>'),
        (r'([a-zA-Z0-9_]+)\|([a-zA-Z0-9_]+)|', '\g<1>')

    ]
    for r in replacements:
        text = re.sub(r[0], r[1], text)

    return text.strip()

if __name__ == '__main__':
    print remove_headline_markup("a|ab")

